<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GoalFragment">

    <TextView
        android:id="@+id/mygoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="104dp"
        android:text="my goal"
        android:clickable="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MyGoalDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:clickable="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/purple_500"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="174dp" />

    <TextView
        android:id="@+id/myGoalDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="due date"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/purple_500"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="319dp" />

    <TextView
        android:id="@+id/myGoalDueDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habits"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/purple_500"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="424dp" />

    <TextView
        android:id="@+id/myGoalDueDate3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tasks"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/purple_500"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="543dp" />

    <TextView
        android:id="@+id/DescriptionContent"
        android:layout_width="351dp"
        android:layout_height="77dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="220dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:clickable="true"
        android:src="?attr/actionModeCloseDrawable"
        app:backgroundTint="@color/purple_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="344dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="27dp"
        android:hint="27/01/2023"
        tools:layout_editor_absoluteY="358dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/AddHabit"
        android:layout_width="52dp"
        android:layout_height="51dp"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/purple_500"
        app:tint="@color/white"
        tools:layout_editor_absoluteX="328dp"
        tools:layout_editor_absoluteY="472dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/AddTask"
        android:layout_width="54dp"
        android:layout_height="53dp"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/purple_500"
        app:tint="@color/white"
        tools:layout_editor_absoluteX="328dp"
        tools:layout_editor_absoluteY="587dp" />

    <TextView
        android:id="@+id/HabitSection"
        android:layout_width="291dp"
        android:layout_height="51dp"
        android:background="@color/material_dynamic_neutral90"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="472dp" />

    <TextView
        android:id="@+id/TaskSection"
        android:layout_width="291dp"
        android:layout_height="56dp"
        android:background="@color/material_dynamic_neutral90"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="587dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="93dp"
        android:layout_height="26dp"
        android:text="Habit"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="483dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="61dp"
        android:layout_height="27dp"
        android:text="Task"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="603dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="M  T  W  T  F  "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/purple_500"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="484dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="14dp"
        android:layout_height="25dp"
        android:text="S"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="484dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="14dp"
        android:layout_height="25dp"
        android:text="S"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="285dp"
        tools:layout_editor_absoluteY="484dp" />


</androidx.constraintlayout.widget.ConstraintLayout>